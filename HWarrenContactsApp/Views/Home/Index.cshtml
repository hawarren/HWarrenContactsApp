@section scripts {
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/angular-route.js"></script>
    <script src="~/Scripts/Client/contactsRouting.js"></script>
    <script src="~/Scripts/Client/ListController.js"></script>
    <script src="~/Scripts/Client/DetailsController.js"></script>
    <script src="~/Scripts/Client/contactService.js"></script>
    <script src="~/Scripts/Client/EditController.js"></script>
    <script src="~/Scripts/Client/MainCtrl.js"></script>
}


<div data-ng-app="contactsRouting">

    <ng-view>

        <div ng-controller="DetailsController" class="ng-scope">
            <h2 class="ng-binding">Camille Stanley</h2>
            <div class="ng-binding">
            </div>
            <div class="ng-binding">
                Phone number: 0
            </div>
            <div class="ng-binding">
                Email: cam+6
            </div>
            <div class="ng-binding">
                Birthday: 0001-01-01T00:00:00+00:00
            </div>
            <b>
                Additional Info

            </b>
            <div class="ng-binding">
                Photo:
            </div>
            <div class="ng-binding">
                Contact Category: []
            </div>
            <button ng-click="edit()">Edit</button>
            <!-- ngInclude: '/Scripts/Client/views/edit.html' -->
            <div ng-include="'/Scripts/Client/views/edit.html'" class="ng-scope">
                <div ng-controller="EditController" class="ng-scope">
                    <form ng-show="isEditable()" class="ng-valid ng-valid-required ng-dirty ng-valid-parse ng-submitted">
                        <fieldset>
                            <div class="form-group">
                                <label for="FirstName">
                                    FirstName
                                </label>
                                <input id="FirstName" type="text" ng-model="edit.PhoneRecord.FirstName" required="" class="form-control ng-not-empty ng-valid ng-valid-required ng-dirty ng-valid-parse ng-touched" placeholder="Enter your first name">
                            </div>
                            <div class="form-group">
                                <label for="LastName">
                                    LastName
                                </label>
                                <input id="LastName" type="text" ng-model="edit.PhoneRecord.LastName" required="" class="form-control ng-pristine ng-untouched ng-not-empty ng-valid ng-valid-required">
                            </div>
                            <p>
                                Firstname: <input type="”text”" ng-model="”model.firstname”" class="ng-pristine ng-untouched ng-valid">
                            </p>
                            <div class="form-group">
                                <label for="Email">
                                    Email
                                </label>
                                <input id="Email" type="text" ng-model="edit.PhoneRecord.Email" required="" class="form-control ng-pristine ng-untouched ng-valid">
                            </div>
                            <div class="form-group">
                                <label for="Birthdate">
                                    Birthday (YYYYMMDD, numbers only)
                                </label>
                                <input id="Birthdate" type="date" ng-model="edit.PhoneRecord.Birthdate" class="form-control ng-pristine ng-untouched ng-valid">
                            </div>
                            <div class="form-group">
                                <label for="Phone">
                                    Phone Number
                                </label>
                                <input id="Phone" type="tel" ng-model="edit.PhoneRecord.Phone" min="0" max="9999999999" class="form-control ng-pristine ng-untouched ng-valid" placeholder="Enter your number">
                            </div>
                            <div class="form-group">
                                <label for="MediaUrl">
                                    MediaUrl
                                </label>
                                <input id="MediaUrl" type="text" ng-model="edit.PhoneRecord.MediaUrl" class="form-control ng-pristine ng-untouched ng-valid" placeholder="Enter your first name">
                            </div>

                            <button class="btn btn-default" ng-click="save()">
                                Save
                            </button>
                            <button class="btn btn-default" ng-click="cancel()">
                                Cancel
                            </button>
                            <div ng-app="contactsRouting" ng-controller="MainCtrl" class="ng-scope">
                                <p ng-show="loading">Loading...</p>
                                <p ng-hide="loading" class="ng-binding">Response: {{response}}</p>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </ng-view>

</div>
